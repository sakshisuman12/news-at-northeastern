{
    "name": "News @ Northeastern",
    "description": "News, Discovery, and Analysis from Around the World",
    "version": "0.04.04",
    "manifest_version": 2,
    "permissions": [
        "activeTab",
        "storage",
        "alarms",
        "notifications",
        "http://news.northeastern.edu/"
    ],
    "icons": {
        "16": "./images/icon16.png",
        "32": "./images/icon32.png",
        "96": "./images/icon96.png",
        "128": "./images/icon128.png",
        "256": "./images/icon256.png"
    },
    "background": {
        "scripts": ["./js/background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_title": "News @ Northeastern",
        "default_popup": "popup.html"
    }
}

